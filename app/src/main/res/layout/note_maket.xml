<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Title"
            android:textSize="@dimen/size_title_card" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_card"/>

        <TextView
            android:id="@+id/date_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Date"
            android:textSize="@dimen/size_date_card" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_card"/>

        <TextView
            android:id="@+id/content_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            android:textSize="@dimen/size_content_card" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>